{% macro customPostList(customPostListItems, global, customPostListHeading)  %}
  {% if customPostListItems.length %}
    <section class="[ post-list ] [ pad-top-900 gap-bottom-900 ]">
      <div class="[ sf-flow ]">
        <h2 class="[ post-list__heading ] [ text-700 ]">{{ customPostListHeading }}</h2>
        <ol class="[ post-list__items ] [ sf-flow ] [ pad-top-300 ]" reversed>
          {% for item in customPostListItems | reverse %}
            {% if item.date.getTime() <= global.now %}
              <li class="post-list__item">
                <h3 class="font-base leading-tight text-500 weight-mid">
                  <a href="{{ item.url }}" class="post-list__link" rel="bookmark">{{ item.data.title }}</a>
                </h3>
                <p class="text-400 gap-top-300">
                  <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
                </p>              
              </li>
            {% endif %}
          {% endfor %}
        </ol>
      </div>
    </section>
  {% endif %}
{% endmacro %}

